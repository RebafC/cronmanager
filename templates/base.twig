{# templates/base.twig #}
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{% block title %}Cron Task Manager{% endblock %}</title>
		<link rel="icon" href="/favicon.ico" type="image/x-icon">
		<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png">
		<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png">
		<link rel="stylesheet" href="/assets/css/style.css"> {% block extra_styles %}{% endblock %}
		</head>
		<body>
			<div id="spinner" class="spinner-overlay" style="display: none;">
				<div class="spinner"></div>
			</div>
				{% if session.username %}
        <nav style="float: right;">
          ðŸ‘¤ {{ session.username }}
          |
          <a href="/dashboard">Dashboard</a>
          |
          <a href="/users">Users</a>
          |
          <a href="/invite">Invite</a>
          |
          <a href="/log">View Cron Log</a>
          |
          {% if constant('CRONWRAPPER') %}
          | <a href="{{ constant('CRONWRAPPER_URL') }}" target="_blank">CronWrapper</a>
          {% endif %}
          <a href="/logout">Logout</a>
        </nav>
        {% endif %}
			<div class="container">
				<h1>ðŸ•’ Cron Task Manager</h1>

				<div id="feedback" class="alert" style="display: block;"></div>
				{% if message %}
					<div class="alert alert-success">{{ message }}</div>
				{% endif %}
				{% if error %}
					<div class="alert alert-error">{{ error }}</div>
				{% endif %}

				{% block content %}{% endblock %}
			</div>

			{% block scripts %}{% endblock %}
		</body>
	</html>

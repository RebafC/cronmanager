{% extends "base.twig" %}
{% block extra_styles %}
	<style>
    .log-view {
      white-space: pre-wrap;
      font-family: monospace;
    }
  </style>
{% endblock %}
{% block title %}Cron Task Log{% endblock %}

{% block content %}
<h2>Cron Task Log</h2>

{% if log_size %}<p>Log size: {{ log_size }} KB</p>{% endif %}

{% if entries %}
    <pre class="log-view">
{{ entries|join('\n\n') }}
    </pre>
{% else %}
    <p>No entries yet.</p>
{% endif %}

<a href="/dashboard" class="button">‚Üê Back to Dashboard</a>
{% endblock %}
